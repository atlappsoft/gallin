<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="efrain.org.mx.gallinp2.LluviaActivity"
    tools:showIn="@layout/activity_lluvia">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿QUE RECURSOS DE BUSQUEDA UTILIZAS?"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/textRecursosView"
            android:layout_below="@+id/textLluvia"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />
        <RadioGroup
            android:id="@+id/recursosRadioGroupss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">
            <RadioButton
                android:id="@+id/LibrosRadioButton"
                android:layout_height="wrap_content"
                android:text="LIBROS"
                android:layout_width="fill_parent">
            </RadioButton>
            <RadioButton
                android:id="@+id/RevistasRadioButton"
                android:layout_height="wrap_content"
                android:text="REVISTAS"
                android:layout_width="fill_parent">
            </RadioButton>
            <RadioButton
                android:id="@+id/BasesDatosRadioButton"
                android:layout_height="wrap_content"
                android:text="BASES DE DATOS"
                android:layout_width="fill_parent">
            </RadioButton>
            <RadioButton
                android:id="@+id/MetaBuscadoresRadioButton"
                android:layout_height="wrap_content"
                android:text="METABUSCADORES"
                android:layout_width="fill_parent">
            </RadioButton>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿DE QUE LUGARES OBTIENES ESTOS RECURSOS?"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/textFuentesView"
            android:layout_below="@+id/textLluvia"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />
        <RadioGroup
            android:id="@+id/fuenteRecRadioGroups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">
            <RadioButton
                android:id="@+id/bibliotecasBDRadioButton"
                android:layout_height="wrap_content"
                android:text="Bibliotecas universitarias, catalogos indexados, bases de datos académicas, etc."
                android:layout_width="fill_parent">
            </RadioButton>
            <RadioButton
                android:id="@+id/googleOtrosRadioButton"
                android:layout_height="wrap_content"
                android:text="Google, wikipedia, yahoo, otros buscadores similares"
                android:layout_width="fill_parent">
            </RadioButton>
        </RadioGroup>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0.1"
            android:layout_marginTop="20dp">
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/regresarButton"
                    android:text="REGRESAR"
                    android:onClick="sendBack"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contButton"
                    android:text="CONTINUAR"
                    android:onClick="sendInfo"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
